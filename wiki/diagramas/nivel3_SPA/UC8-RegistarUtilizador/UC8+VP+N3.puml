@startuml
'https://plantuml.com/sequence-diagram

autonumber

actor "Utilizador Não registado" as J

participant ":Route" as R
participant ":RegisterComponent View" as CV
participant ":RegisterComponent" as C
participant "dto: JogadorDTO" as DTO
participant ":JogadorService" as SERV

activate J
    J->R : /register
    activate R
        R->CV : redirectTo()
    deactivate R
    activate CV
        CV->C : jogadorForm()
        activate C
            C-->CV : jogadorForm()
        deactivate C
        CV-->J : show form
    deactivate CV
    J->CV : preenche o formulário e carrega no botão para criar
    activate CV
        CV->C : addJogador()
        activate C
            C-->DTO ** : create()
            C->SERV : addJogador(dto)
            activate SERV
                SERV->o] : POST(.../api/Users,dto)
                SERV<--/o] : Sucesso(newDTO)
                SERV-->C : Sucesso
            deactivate SERV
            C-->CV : Sucesso
        deactivate C
        CV-->J : Sucesso
    deactivate CV
deactivate J
            
        
   
        

@enduml